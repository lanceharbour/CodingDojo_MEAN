<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="text/javascript">
            let socket = io();

            function buttonClicked() {
                socket.emit('clicked');
            }

            function clearCount() {
                socket.emit('clear');
            }

            socket.on('clickUpdate', function(data) {
                document.getElementById("clickedCount").innerHTML = 'The button has been clicked ' + data + ' times.';
            });
</script>
<h1>Epic Button Game</h1>
<p id="clickedCount">The button has been clicked 0 times.</p>
<p><button onclick="buttonClicked()">Click to Add</button></p>
<p><button onclick="clearCount()">Reset Count</button></p>